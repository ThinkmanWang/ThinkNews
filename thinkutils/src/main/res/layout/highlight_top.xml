<?xml version="1.0" encoding="utf-8"?>
<com.thinkman.thinkutils.highlight.internal.HighlightView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/highlight_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/highlight_button"
        style="@style/HighlightButton"
        android:text="@string/default_button_label"/>

    <TextView
        android:id="@+id/highlight_description"
        style="@style/HighlightDescription"
        android:layout_above="@+id/highlight_button"/>

    <TextView
        android:id="@+id/highlight_title"
        style="@style/HighlightTitle"
        android:layout_above="@+id/highlight_description"/>

</com.thinkman.thinkutils.highlight.internal.HighlightView>