<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressLayout">
        <!--正在加载-->
        <attr name="loading_layout" format="integer"/>
        <!--无内容-->
        <attr name="none_content" format="integer"/>
        <!--网络错误-->
        <attr name="network_content" format="integer"/>
        <!--加载失败-->
        <attr name="failed_content" format="integer"/>
    </declare-styleable>

    <attr name="progressLayoutDefStyle" format="reference"/>

    <declare-styleable name="PasswordView">
        <attr name="showPasswordIcon" format="reference" />
        <attr name="hidePasswordIcon" format="reference" />
        <attr name="iconPosition" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="fontPath" format="string" />
    </declare-styleable>

    <declare-styleable name="LoginView">
        <attr name="loginBtnBDRes" format="reference" />
        <attr name="loginBtnLabel" format="reference" />
        <attr name="accountLabel" format="reference" />
        <attr name="accountHint" format="reference" />
        <attr name="passwordText" format="reference" />
        <attr name="passwordHint" format="reference" />
        <attr name="forgetPwdLabel" format="reference" />
        <attr name="registerLabel" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImagePickerView">
        <attr name="maxCount" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="CommonEditTextLine">
        <attr name="labelText" format="reference"/>
        <attr name="labelTextSize" format="reference"/>
        <attr name="labelColor" format="reference"/>
        <attr name="contentText" format="reference"/>
        <attr name="contentTextSize" format="reference"/>
        <attr name="contentColor" format="reference"/>
        <attr name="hintColor" format="reference"/>
        <attr name="hintText" format="reference"/>
        <attr name="isPassword" format="boolean"/>
        <!--直接使用系统中已定义的语意明确的属性，不用设置format-->
        <attr name="android:inputType" />
    </declare-styleable>
</resources>