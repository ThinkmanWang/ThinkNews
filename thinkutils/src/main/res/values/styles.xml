<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppThemeTranslucentBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/transparent</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <!--Default Style-->
  <style name="DefaultSmartStyle">
    <item name="loading_layout">@layout/default_loading_layout</item>
    <item name="none_content">@layout/default_none_layout</item>
    <item name="network_content">@layout/default_connectionless_layout</item>
    <item name="failed_content">@layout/default_failed_layout</item>
  </style>

  <style name="message_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/material_16dp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/material_18sp</item>
  </style>

  <style name="hint_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/material_16dp</item>
    <item name="android:textColor">@android:color/darker_gray</item>
    <item name="android:textSize">@dimen/material_13sp</item>
  </style>

  <style name="HighlightTitle" parent="@android:style/TextAppearance.Large">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">?attr/actionBarSize</item>
    <item name="android:paddingTop">20dp</item>
    <item name="android:layout_marginLeft">20dp</item>
    <item name="android:layout_marginRight">20dp</item>
  </style>

  <style name="HighlightDescription" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:layout_marginLeft">20dp</item>
    <item name="android:layout_marginRight">20dp</item>
    <item name="android:layout_marginBottom">30dp</item>
  </style>

  <style name="HighlightButton" parent="Base.Widget.AppCompat.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_margin">20dp</item>
    <item name="android:padding">5dp</item>
  </style>

</resources>

