<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thinkman.thinkutilssample.FragmentActivity"
    tools:showIn="@layout/activity_fragment">

    <fragment
        android:id="@+id/frag_list"
        class="com.thinkman.thinkutilssample.fragment.ListFragment"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="match_parent"/>

    <fragment
        android:id="@+id/frag_detail"
        class="com.thinkman.thinkutilssample.fragment.DetailFragment"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="match_parent"/>

</LinearLayout>
